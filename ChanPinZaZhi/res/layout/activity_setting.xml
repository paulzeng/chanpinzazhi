<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/set_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="5dp"
        android:background="@drawable/border_setitem_bg" >

        <ImageButton
            android:id="@+id/icon_set_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/icon_set_push"
            android:contentDescription="@string/txt_clearcache" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/icon_set_push"
            android:gravity="center_vertical"
            android:text="@string/txt_push"
            android:textColor="@color/set_item_color"
            android:textSize="@dimen/set_item_size" /> 

        <com.chanpinzazhi.view.SwitchButton
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:button="@null"
            android:checked="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="5dp"
        android:background="@drawable/border_setitem_bg" >

        <ImageButton
            android:id="@+id/icon_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/icon_set_clear_cache"
            android:contentDescription="@string/txt_clearcache" />

        <TextView
            android:id="@+id/btn_clear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/icon_clear"
            android:gravity="center_vertical"
            android:text="@string/txt_clearcache"
            android:textColor="@color/set_item_color"
            android:textSize="@dimen/set_item_size" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/set_right_arrow"
            android:contentDescription="@string/txt_clearcache" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="5dp"
        android:background="@drawable/border_setitem_bg" >

        <ImageButton
            android:id="@+id/icon_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/icon_set_share"
            android:contentDescription="@string/txt_clearcache" />

        <TextView
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/icon_share"
            android:gravity="center_vertical"
            android:text="@string/txt_share"
            android:textColor="@color/set_item_color"
            android:textSize="@dimen/set_item_size" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/set_right_arrow"
            android:contentDescription="@string/txt_share" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="5dp"
        android:background="@drawable/border_setitem_bg" >

        <ImageButton
            android:id="@+id/icon_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/icon_set_feedback"
            android:contentDescription="@string/txt_clearcache" />

        <TextView
            android:id="@+id/btn_feedback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/icon_feedback"
            android:gravity="center_vertical"
            android:text="@string/txt_feedback"
            android:textColor="@color/set_item_color"
            android:textSize="@dimen/set_item_size" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/set_right_arrow"
            android:contentDescription="@string/txt_feedback" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="5dp"
        android:background="@drawable/border_setitem_bg" >

        <ImageButton
            android:id="@+id/icon_set_versions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/icon_set_versions"
            android:contentDescription="@string/txt_clearcache" />

        <TextView
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/icon_set_versions"
            android:gravity="center_vertical"
            android:text="@string/txt_update"
            android:textColor="@color/set_item_color"
            android:textSize="@dimen/set_item_size" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/set_right_arrow"
            android:contentDescription="@string/txt_update" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="5dp"
        android:background="@drawable/border_setitem_bg" >

        <ImageButton
            android:id="@+id/icon_set_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/icon_set_about"
            android:contentDescription="@string/txt_clearcache" />

        <TextView
            android:id="@+id/btn_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/icon_set_about"
            android:gravity="center_vertical"
            android:text="@string/txt_about"
            android:textColor="@color/set_item_color"
            android:textSize="@dimen/set_item_size" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/set_right_arrow"
            android:contentDescription="@string/txt_about" />
    </RelativeLayout>

</LinearLayout>